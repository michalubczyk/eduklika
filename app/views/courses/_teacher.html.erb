<% @courses.each do |course| %>
    <div class="list-group-item">
      <%= link_to course_posts_path(course), { :class => 'tooltips', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', :title => course.description  } do %>
          <%= course.name.truncate(60, omission:' [...]') %>
          <%= content_tag :span, course.posts.count, :class => "badge" %>
      <% end %>
      <div class="btn-group pull-right">
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <%= image_tag("dots.png") %>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to image_tag("customers.png") + " Grupy", course_groups_path(course) %></li>
          <li><%= link_to image_tag("edit.png") + " Edytuj", edit_course_path(course) %></li>
          <li><%= link_to image_tag("minus.png") + " Usuń", course, method: :delete, data:{confirm: "Jesteś pewny, że chcesz usunąć ten kurs?"} %></li>
        </ul>
      </div>
    </div>
<% end %>