<div class="col-md-6 col-xs-10 center">
  <%= form_for([@post.course, @post]) do |f| %>
      <%= f.text_field :title, autofocus: true, :class => "form-control", :placeholder => "Nazwa postu" %>
      <%= f.text_area :description, autofocus: true, :class => "form-control", :placeholder => "Opis postu" %>
      <%= f.text_field :tag, autofocus: true, :class => "form-control", :placeholder => "Tagi postu" %>
      <%= f.hidden_field :user_id, :value => "#{@course.id}" %>
      <%= f.submit "Zatwierdź", :class => "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <div class="text-center"><%= link_to "&larr; powrót".html_safe, course_posts_path %></div>
</div>
