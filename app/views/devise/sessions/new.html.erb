<div class="col-md-6 col-xs-10 center">
  <% flash.each do |key, value| %>
      <% if flash[:notice] %>
          <div class="alert alert-success" role="alert"><%= value %></div>
      <% elsif flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Błąd:</span>
            <%= value %>
          </div>
      <% end %>
  <% end %>
</div>
<div class="form-signin">
  <h2 class="form-signin-heading">Zaloguj</h2>
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Adres email" %>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Hasło" %>
      <div class="checkbox" >
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Nie wylogowuj mnie" %>
      </div>
      <%= f.submit "Zaloguj", :class => "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <div class="text-center"><%= render "devise/shared/links" %></div>
</div>
